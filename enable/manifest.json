{
    "name": "Enable right click",
    "version": "0.0.10",
    "manifest_version": 2,
    "default_locale": "en",
    "icons": {
        "48": "img/icon48.png"
    },
    "browser_action": {
        "default_title": "Disable right click",
        "default_icon": "img/icon128.png"
    },
    "options_ui": {
        "page": "src/options.html",
        "chrome_style": true
    },
    "background": {
        "scripts": [
            "src/DisableSettings.js",
            "src/background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "all_frames": true,
            "js" : [
                "src/content_scripts.js"
            ]
        }
    ],
    "permissions": [
        "<all_urls>",
        "storage",
        "tabs"
    ],
    "web_accessible_resources" : [
        "/web_accessible_resources/index.js"
    ]
}